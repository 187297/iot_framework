<?xml version="1.0" encoding="UTF-8"?>
<project default="generate" name="com.pfc.iot.gen">
    <property name="ECLIPSE_HOME" value="../../../eclipse/modeling-2019-06/eclipse"/>
    <property name="ECLIPSE_WORKSPACE" value="../.."/>

    <!-- The classpath with only the dependencies used by the project -->
    <path id="com.pfc.iot.gen.libraryclasspath">
        <pathelement location="${ECLIPSE_WORKSPACE}/com.pfc.iot.gen/bin"/>
    </path>

    <path id="com.pfc.iot.gen.classpath">
        <path refid="com.pfc.iot.gen.libraryclasspath"/>
    </path>

    <!-- The classpath with only the jars available in the plugin folder of Eclipse -->
    <path id="com.pfc.iot.gen.libraryclasspath.alljars">
        <pathelement location="../com.pfc.iot.gen/bin"/>
        <fileset dir="${ECLIPSE_HOME}/plugins/" includes="*.jar"/>
    </path>

    <path id="com.pfc.iot.gen.classpath.alljars">
        <path refid="com.pfc.iot.gen.libraryclasspath.alljars"/>
    </path>

    <!-- The default task with the jars used by this project -->
    <target name="generate">
        <java classname="com.pfc.iot.gen.main.Generate" classpathref="com.pfc.iot.gen.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>

    <!--
        In case of problem you can also try with all the jar available in your Eclipse
        Keep in mind that having two versions of the same jar can create problems
    -->
    <target name="generate.alljars">
        <java classname="com.pfc.iot.gen.main.Generate" classpathref="com.pfc.iot.gen.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>
</project>
